<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgound"
    android:padding="16dp">

    <!-- Menu Button -->
    <!-- Added accessibility text -->

    <!-- App Title -->

    <!-- Help Button -->

    <ImageButton
        android:id="@+id/menuButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="115dp"
        android:background="@null"
        android:contentDescription="Open Menu"
        android:src="@drawable/bars_solid" />

    <!-- Added accessibility text -->

    <!-- SOS Button -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="98dp"
        android:layout_marginTop="47dp"
        android:layout_marginEnd="98dp"
        android:text="AlertZone"
        android:textColor="@color/Text"
        android:textSize="35sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/helpButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="115dp"
        android:layout_marginEnd="1dp"
        android:background="@null"
        android:contentDescription="Help"
        android:src="@drawable/help_circle_svgrepo_com" />

    <Button
        android:id="@+id/sosButton"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:background="@drawable/sos_button_svgrepo_com"
        android:contentDescription="Press SOS in case of emergency" />  <!-- Added accessibility text -->

    <!-- Important Notice Icon -->

    <!-- Important Notice Title -->

    <!-- Important Notice Content -->

    <!-- Bottom Information -->

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sosButton"
        android:layout_marginStart="20dp"
        android:layout_marginTop="17dp"
        android:src="@drawable/baseline_add_alert_24" />

    <TextView
        android:layout_width="264dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/sosButton"
        android:layout_marginStart="60dp"
        android:layout_marginTop="19dp"
        android:text="Important Notice:"
        android:textColor="@color/Text"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/importantNotice"
        android:layout_width="367dp"
        android:layout_height="232dp"
        android:layout_below="@id/sosButton"
        android:layout_marginStart="20dp"
        android:layout_marginTop="66dp"
        android:layout_marginEnd="20dp"
        android:gravity="start"
        android:padding="10dp"
        android:text="This app is a government-authorized tool designed strictly for emergencies. Misuse of this app will lead to serious consequences. If anyone is found using the app irresponsibly, they will face immediate legal action, which includes jail time and a government-imposed fine."
        android:textColor="@color/Text"
        android:textSize="19sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/dragOption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="See the location of the people who need help.(it only works when nearest people pressed sos)"
        android:textColor="@color/Text"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:background="@color/fir_head"
        android:padding="7dp" />

</RelativeLayout>
